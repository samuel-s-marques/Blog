	<div class="alert alert-danger alert-dismissible fade show">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova categoria:</h3>

<div class="card">
	<div class="card-body">
		<form action="/admin/categorias/nova" method="post">
			<label for="nome">Nome:</label>
			<input class="form-control" type="text" name="nome" id="nome" placeholder="Nome da categoria" required>

			<label for="slug">Slug:</label>
			<input class="form-control" type="text" name="slug" id="slug" placeholder="Slug da categoria" required>

			<br>
			<button type="submit" class="btn btn-success">Criar categoria</button>
		</form>
	</div>
</div>