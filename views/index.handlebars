{{#if user}}

{{else}}
<div class="jumbotron">
	<h1 class="display-4">Bem-vindo ao meu Blog</h1>
	<p class="lead">Feito com Node.Js, MongoDB e Bootstrap.</p>
	<hr class="my-4">

	<p class="lead">
		<a href="#" class="btn btn-primary btn-lg" role="button">Crie uma conta!</a>
	</p>
</div>
<hr>
{{/if}}

<h2>Postagens recentes</h2>
<hr>
{{#each postagens}}
<div class="card mt-4">
	<div class="card-body">
		<h3>{{titulo}}</h3>

		<p>{{descricao}}</p>
		<a href="/postagem/{{slug}}" class="btn btn-success">Leia mais</a>
		<hr>
		<small>Categoria: <a href="/categorias/{{categoria.slug}}"><span class="badge bg-primary">{{categoria.nome}}</span></a></small><br>
		<small>Data de publicação: {{#formatDate data}}{{/formatDate}}</small>
	</div>
</div>
{{else}}
	<h5>Nenhuma postagem!</h5>
{{/each}}